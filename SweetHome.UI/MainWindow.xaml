<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="450" Width="700">

    <ListView x:Name="lbItems">
        <ListView.View>
            <GridView>
                <GridViewColumn Header="" DisplayMemberBinding="{Binding PublishedAt, StringFormat=MMM dd}" Width="60" />
                <GridViewColumn Header="" DisplayMemberBinding="{Binding Caption}" Width="400" />
                <GridViewColumn Header="" DisplayMemberBinding="{Binding Price}" Width="60" />
            </GridView>
        </ListView.View>
    </ListView>
</Window>